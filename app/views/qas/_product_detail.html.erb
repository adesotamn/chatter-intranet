<div class="span-8 last left-sidebar" >
	<%= form_tag(qa_path('0'), :method => "get", :id => 'engine_picker' ) do %>
	  <%= label_tag(:engine, "Select Product") %>&nbsp;&nbsp;
  	  <%= select "engine", "id", records_for_picker(@records), { :selected => @selected_record },   {:class => "pretty" } %>
    <% end %>	
</div>

<div class="span-8 last left-sidebar" >
  	<h4>Product Description</h4>
    <div class="span-8 last image">
	  <%= image_tag "engine#{@selected_record}.jpg", :size => "200x200" %>
	</div>
	<p><%= @records[@selected_record]['Description__c'] %></p>
</div>

<div class="span-8 last left-sidebar" >
  	<h4>Specifications</h4>
    <div  class="span-6 last">
	  Amps:&nbsp;&nbsp;<%= @records[@selected_record]['Amps__c'].round %>
	</div>
	<div  class="span-6 last">
	  Voltage:&nbsp;&nbsp;<%= @records[@selected_record]['Voltage__c'].round %>
	</div>
	<div  class="span-6 last">
	  Hertz:&nbsp;&nbsp;<%= @records[@selected_record]['Hertz__c'].round %>
	</div>
	
</div>